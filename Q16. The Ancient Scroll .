#include <iostream>
using namespace std;

int searchScroll(int arr[], int n, int key) {
    for (int i = 0; i < n; i++) {
        if (arr[i] == key)
            return i; // return index if found
    }
    return -1; // return -1 if not found
}

int main() {
    int arr[] = {2, 5, 7, 8};
    int key = 7;
    int n = sizeof(arr) / sizeof(arr[0]);

    int index = searchScroll(arr, n, key);
    cout << index << endl;

    return 0;
}
